<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".InviteCodeActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_msg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:text="Để xem con bạn trên bản đồ, hãy cài đặt phần mềm cho trẻ và thêm mã này"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_msg"
            android:text="XXXXX"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_msg_timelim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_below="@id/textView_code"
            android:text="Mã sẽ hết hạn sau 5 phút" />

    </LinearLayout>
</RelativeLayout>